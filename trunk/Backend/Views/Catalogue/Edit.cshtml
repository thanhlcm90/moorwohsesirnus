@{
    ViewBag.Title = "Cập nhật hãng sản xuất";
}
@model Showroom.Models.Catalogue
<!-- Plupload -->
<link rel="stylesheet" href="@Url.Content("~/Content/css/plugins/plupload/jquery.plupload.queue.css")">
<!-- PLUpload -->
<script src="@Url.Content("~/Scripts/plugins/plupload/plupload.full.js")"></script>
<script src="@Url.Content("~/Scripts/plugins/plupload/jquery.plupload.queue.js")"></script>
<!-- Custom file upload -->
<script src="@Url.Content("~/Scripts/plugins/fileupload/bootstrap-fileupload.min.js")"></script>
<div class="box">
    <div class="box-title">
        <h3><i class="icon-edit"></i>Cập nhật hãng sản xuất</h3>
    </div>
    <div class="box-content">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(item => item.Id)
            <div class="controls">
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <div class="fileupload-new thumbnail">
                        @if (Model.Image !=""){<img  src="/Images/Catalogue/@Model.Image"/>}
                        else{<img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" />}
                    </div>
                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                    <div>
                        <span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><input type="file" name="Image"/></span>
                        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(item => item.Name)</label>
                <div class="controls">
                    @Html.TextBoxFor(item => item.Name,new { @class = "input-xlarge"})
                    @Html.ValidationMessageFor(item => item.Name)
                </div>
            </div>
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(item => item.Priority)</label>
                <div class="controls">
                    @Html.TextBoxFor(item => item.Priority,new { @class = "input-xlarge"})
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Lưu </button>
                <button type="button" class="btn">Hủy </button>
            </div>
        }
    </div>
</div>
