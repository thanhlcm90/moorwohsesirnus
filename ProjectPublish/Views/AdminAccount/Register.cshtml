@model SunriseShowroom.Models.RegisterModel
@{
    ViewBag.Title = "Thêm tài khoản";
    Layout = "../Shared/_AdminLayout.cshtml";
    String[] ListRoles = ViewBag.ListRoles;
}
<script src="@Url.Content("~/Scripts/Admin/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="box">
    <div class="box-title">
        <h3><i class="icon-edit"></i>Thêm mới tài khoản</h3>
    </div>
    <div class="box-content">

        <p>
            Đội dài mật khẩu tối thiểu phải lớn hơn @Membership.MinRequiredPasswordLength
        </p>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Tạo tài khoản không thành công. Hãy kiểm tra các trường thông tin một lần nữa.")
            @Html.AntiForgeryToken()
            
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(m => m.UserName)</label>
                <div class="controls">
                    @Html.TextBoxFor(item => item.UserName, new { @class = "input-xlarge" })
                    @Html.ValidationMessageFor(item => item.UserName)
                </div>
            </div>
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(m => m.Email)</label>
                <div class="controls">
                    @Html.TextBoxFor(item => item.Email, new { @class = "input-xlarge" })
                    @Html.ValidationMessageFor(item => item.Email)
                </div>
            </div>
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(m => m.Password)</label>
                <div class="controls">
                    @Html.PasswordFor(item => item.Password, new { @class = "input-xlarge" })
                    @Html.ValidationMessageFor(item => item.Password)
                </div>
            </div>
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(m => m.ConfirmPassword)</label>
                <div class="controls">
                    @Html.PasswordFor(item => item.ConfirmPassword, new { @class = "input-xlarge" })
                    @Html.ValidationMessageFor(item => item.ConfirmPassword)
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Lưu </button>
                <button type="button" class="btn" id="btnReset">Hủy </button>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $('#btnReset').click(function () {
        $('input:visible, textarea:visible').val('');
    });
</script>