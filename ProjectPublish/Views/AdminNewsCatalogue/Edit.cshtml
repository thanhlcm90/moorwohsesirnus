@{
    ViewBag.Title = "Cập nhật chuyên mục tin tức";
     Layout = "../Shared/_AdminLayout.cshtml";
}
@model Showroom.Models.NewsCatalogue
<!-- Plupload -->
<link rel="stylesheet" href="@Url.Content("~/Content/Admin/css/plugins/plupload/jquery.plupload.queue.css")">
<!-- PLUpload -->
<script src="@Url.Content("~/Scripts/Admin/Scripts/plugins/plupload/plupload.full.js")"></script>
<script src="@Url.Content("~/Scripts/Admin/Scripts/plugins/plupload/jquery.plupload.queue.js")"></script>
<!-- Custom file upload -->
<script src="@Url.Content("~/Scripts/Admin/Scripts/plugins/fileupload/bootstrap-fileupload.min.js")"></script>
<div class="box">
    <div class="box-title">
        <h3><i class="icon-edit"></i>Cập nhật chuyên mục tin tức</h3>
    </div>
    <div class="box-content">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(item => item.Id)
@*<div class="controls" style="display: none">
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <div class="fileupload-new thumbnail">
                        @if (Model.Image !=""){<img  src="/Images/Catalogue/@Model.Image"/>}
                        else{<img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" />}
                    </div>
                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                    <div>
                        <span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><input type="file" name="Image"/></span>
                        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                    </div>
                </div>
            </div>*@
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(item => item.Name)</label>
                <div class="controls">
                    @Html.TextBoxFor(item => item.Name, new { @class = "input-xlarge" })
                    @Html.ValidationMessageFor(item => item.Name)
                </div>
            </div>
            <div class="control-group">
                <label for="" class="control-label">@Html.LabelFor(item => item.Atcflg)</label>
                <div class="controls">
                   @Html.RadioButtonFor(item => item.Atcflg, "A",new { @checked = "checked", @group="gActflg"}) Hiển thị  
                   @Html.RadioButtonFor(item => item.Atcflg, "I","gActflg") Ẩn
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Lưu </button>
                <button type="button" class="btn" id="btnReset">Hủy </button>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $('#btnReset').click(function () {
        $('input:visible, textarea:visible').val('');
    });
</script>
